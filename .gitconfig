    br = branch -r  
    #############  
    f = fetch  
    fo = fetch origin  
    #############  
    m = merge  
    #############  
    ps = push  
    pl = pull  
    pb = pull --rebase  
    psf = push -f  
    psu = push -u  
    plu = pull -u  
    pso = push origin  
    plo = pull origin  
    pbo = pull --rebase origin  
    psfo = push -f origin  
    psuo = push -u origin  
    pluo = pull -u origin  
    pod = push origin --delete 
    #############  
    rb = rebase  
    #############  
    re = reset  
    rh = reset HEAD  
    reh = reset --hard  
    rem = reset --mixed  
    res = reset --soft  
    rehh = reset --hard HEAD  
    remh = reset --mixed HEAD  
